{
    "name": "Robin",
    "version": "0.5",
    "manifest_version": 2,
    "description": "Admin Panel for Robin Browser and Flitering Software",
    "browser_action": {
        "default_icon": "assets/img/logo.png",
        "default_popup": "login.html"
    },
    "icons": {
        "128": "assets/img/logo.png"
    },

    "permissions": ["tabs", "storage", "http://*/*", "https://*/*", "fontSettings"],


    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "file:///*/*"],
            "js": ["assets/js/core.js"],
            "all_frames": true
    }
  ],
    "web_accessible_resources": ["assets/css/bootstrap/*.css", "assets/css/fonts/*", "assets/js/*.js"]
}